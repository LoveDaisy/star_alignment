<SLButton@Button>:
    size_hint: 1,None
    height:self.texture_size[1]
    background_color: 0,0,0,0  # the last zero is the critical one, make invisible
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    font_size:'15sp'

<SLLabel@Label>:
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1)
        Rectangle:
            pos: self.pos
            size: self.size

<SelectableLabel>:
    # Draw a background to indicate selection
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    canvas.before:
        Color:
            rgba: (.7, 0.7, .7, 1) if self.selected else (.4, .4, .4, 1)
        Rectangle:
            pos: self.pos
            size: self.size
     
<starAlignBL>:
    orientation: 'vertical'
    spacing: 3
    padding: root.width*0.01

    BoxLayout:
        id: upper_pane
        orientation: 'horizontal'
        spacing: 3
        padding: 3
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            id: operations_pane
            orientation: 'vertical'
            spacing: 3
            padding: 3,3,3,3
            size_hint: None,1
            width: '200sp'
            
            SLLabel:
                id: filelist_label
                size_hint: None,None
                width: "194sp"
                height: "25sp"
                text: "Image files"
                halign: 'center'
                color: [0,0,0,1]
                font_color: .2,.3,.4,1
                font_size: '18sp'
                text_size: self.size # Set this so text will wrap

            ScrollView:
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                do_scroll_x: True
                do_scroll_y: False
                RecycleView:
                    id: pics_list
                    viewclass: 'SelectableLabel'
                    data: []
                    SelectableRecycleBoxLayout:
                        default_size: None, dp(26)
                        default_size_hint: 1, None
                        size_hint_y: None
                        size_hint_x: None
                        width: "300sp"
                        height: self.minimum_height
                        orientation: 'vertical'
                        multiselect: False
                        touch_multiselect: False
            
            BoxLayout:
                size_hint:1,None
                padding: 4
                spacing: 4
                height: "25sp"
                canvas.before:
                    Color:
                        rgba: (.4,.4,.4,1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10,]
                SLLabel:
                    text: "Keep interim"
                CheckBox:
                    id: keep_interim
        
            SLButton:
                text: 'Add images'
                on_release: root.show_load() 
            SLButton:
                id: focus_button
                disabled: True
                text: 'Set focal length'
                on_release: root.show_set_focal()
            SLButton:
                id: reset_button
                text: 'Reset'
                on_release: root.reset_ui()
                disabled: True
            SLButton:
                id: merge_button
                text: 'Merge'
                disabled: True
                on_release: root.show_merge()
            SLButton:
                id: save_button
                text: 'Save'
                disabled: True
                on_release: root.show_save()
        BoxLayout:
            id: render_pane
            orientation: 'vertical'
            spacing: 3
            padding: 3
            
            SLLabel:
                id: render_label
                color: [0,0,0,1]
                font_color: .2,.3,.4,1
                size_hint:1,None
                height: "25sp"
                font_size: '18sp'
                halign: 'center'
                text_size: self.size # Set this so text will wrap
                text: "Current Image"
                
            ScrollView:
                Button:
                    id: render_area
                    text: "Preview window"
                    disabled: True
                    size_hint:None,None
                    size: self.parent.size
                    on_size: root.show_on_size()
            SLLabel:
                id: focus_label
                color: [0,0,0,1]
                font_color: .2,.3,.4,1
                size_hint:1,None
                height: "25sp"
                font_size: '18sp'
                text_size: self.size # Set this so text will wrap
                text: "Focus Length:  Crop Factor: Please set focal length"
                
