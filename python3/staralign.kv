<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters: ["*.tif","*.NEF","*.ARW"]
            path: "."
            multiselect: True

        BoxLayout:
            size_hint_y: None
            spacing: 3
            padding: 3
            height: 30
            SLButton:
                text: "Cancel"
                on_release: root.cancel()

            SLButton:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<MergeDialog>:
    merge_label: merge_label
    ok_button: ok_button
    BoxLayout:
        spacing: 3
        padding: 3
        size: root.size
        pos: root.pos
        orientation: "vertical"
        SLLabel:
            id: merge_label
            color: [0,0,0,1]
            font_color: .2,.3,.4,1
            font_size: '18sp'
            valign: 'top'
            text_size: self.size # Set this so text will wrap
            text: "Merging & Aligning"

        SLButton:
            id: ok_button
            text: "OK"
            size_hint:None,None
            font_size: '18sp'
            height: '20sp'
            width: '38sp'
            pos_hint: {'x':0.5}
            disabled: True
            on_release: root.cancel()


<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: "."
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            spacing: 3
            padding: 3
            height: 30
            SLButton:
                text: "Cancel"
                on_release: root.cancel()

            SLButton:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)


<SetFocusDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        GridLayout:
            cols: 2
            padding: 5
            spacing: 5
            SLLabel:
                text:"Set focal length:"
                size_hint_x: None
                width: "150sp"
            TextInput
                id: focal
                write_tab: False
                input_filter: "float"
                multiline: False
                hint_text: "Focal length"
            SLLabel:
                text:"Set crop factor:"
                size_hint_x: None
                width: "150sp"
            TextInput
                id: crop
                write_tab: False
                input_filter: "float"
                multiline: False
                hint_text: "Crop factor"

        BoxLayout:
            size_hint_y: None
            height: 30
            spacing: 3
            padding: 3
            SLButton:
                text: "Cancel"
                on_release: root.cancel()

            SLButton:
                text: "Set"
                on_release: root.save(focal.text, crop.text)
